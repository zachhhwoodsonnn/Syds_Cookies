<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CookieSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CookieSite.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom mb-3">
            <div class="container">
                <a class="navbar-brand" href="/HomeScreen">
                    <img src="~/images/Cookies.png" alt="CookieSite Logo" style="height: 40px; width: auto;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="links" class="nav-link text-dark" asp-area="" asp-page="/Index">Menu</a>
                        </li>
                        <li class="nav-item">
                            <a id="links" class="nav-link text-dark" asp-area="" asp-page="/Privacy">Rewards</a>
                        </li>
                        <li class="nav-item">
                            <a id="links" class="nav-link text-dark" asp-area="" asp-page="/Privacy">Merch</a>
                        </li>
                        <li class="nav-item">
                            <a id="links" class="nav-link text-dark" asp-area="" asp-page="/Privacy">Careers</a>
                        </li>
                    </ul>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="socials" class="nav-link text-dark" asp-area="" asp-page="/Index">Follow Our Socials:</a>
                        </li>
                    </ul>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="navbar-brand-1" href="/">
                                <img src="~/images/insta.png" alt="CookieSite Logo" style="height: 40px; width: auto;">
                                <img src="~/images/face.png" alt="CookieSite Logo" style="height: 40px; width: auto;">
                                <img src="~/images/tiktok.png" alt="CookieSite Logo" style="height: 40px; width: auto;">
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CookieSite - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>